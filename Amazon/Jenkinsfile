pipeline {
    agent any

    parameters {
        string(name: 'APP_VERSION', defaultValue: '1.0.0', description: 'App version')
    }

    environment {
        MAVEN = tool 'MAVEN_3'
        PATH = "${MAVEN}/bin:${PATH}"
    WAR_FILE = "Amazon-1.0.0.war"
    TOMCAT_HOST = "192.168.65.128" 
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Select Environment Based on Branch') {
            steps {
                script {
                    def TARGET_ENV = ""
                    def TOMCAT_HOST = ""

                    if (env.BRANCH_NAME == 'dev') {
                        TARGET_ENV  = "DEV"
                        TOMCAT_HOST = "dev-tomcat.local"
                    } else if (env.BRANCH_NAME == 'qa') {
                        TARGET_ENV  = "QA"
                        TOMCAT_HOST = "qa-tomcat.local"
                    } else if (env.BRANCH_NAME == 'prod') {
                        TARGET_ENV  = "PROD"
                        TOMCAT_HOST = "prod-tomcat.local"
                    } else {
                        error "Unsupported branch: ${env.BRANCH_NAME}"
                    }

                    env.TARGET_ENV  = TARGET_ENV
                    env.TOMCAT_HOST = TOMCAT_HOST

                    echo "Selected ENV: ${env.TARGET_ENV} (${env.TOMCAT_HOST})"
                }
            }
        }

        stage('Build with Maven') {
            steps {
                dir('Amazon') {
                    sh "mvn clean install"
                }
            }
        }

        stage('SonarQube Scan') {
            steps {
                dir('Amazon') {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                    withSonarQubeEnv('SonarQubeScanner') {
                        sh "mvn sonar:sonar"
                    }
                }
            }
        }
    }

        stage('Quality Gate') {
            steps {
                script {
                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                    timeout(time: 10, unit: 'SECONDS') {
                        def qg = waitForQualityGate()
                        if (qg.status != "OK") {
                            error "Quality Gate Failed: ${qg.status}"
                        }
                    }
                }
            }
        }
    }

stage('Prepare Artifact') {
    steps {
        script {
            dir("${env.WORKSPACE}/Amazon") { 
                sh '''
                # Copy the WAR file from the Maven target directory to workspace root
                cp Amazon-Web/target/Amazon.war ${WORKSPACE}/Amazon-1.0.0.war
                '''
            }
        }
    }
}
stage('Deploy to Tomcat') {
    steps {
        script {
            sshagent(credentials: ['tomcat_ssh_cred']) {
                sh "scp ${WORKSPACE}/${env.WAR_FILE} tomcat@${env.TOMCAT_HOST}:/tmp/"
                sh """
                ssh tomcat@${env.TOMCAT_HOST} '
                    set +e

                    # Backup old WAR
                    if [ -f /opt/tomcat/webapps/Amazon.war ]; then
                        mkdir -p /opt/tomcat/backups
                        cp /opt/tomcat/webapps/Amazon.war /opt/tomcat/backups/Amazon-$(date +%F-%T).war
                    fi

                    # Stop Tomcat
                    /opt/tomcat/bin/shutdown.sh || true
                    sleep 5

                    # Remove old app
                    rm -rf /opt/tomcat/webapps/Amazon/
                    cp /tmp/${env.WAR_FILE} /opt/tomcat/webapps/Amazon.war

                    # Start Tomcat
                    /opt/tomcat/bin/startup.sh
                    sleep 10
                '
                """
            }
        }
    }
}

    }

    post {
        success {
            echo "Deployment completed successfully!"
            mail(
                to: "bhuvan.abc.b12.reports@gmail.com",
                subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Build successful.\nLog: ${env.BUILD_URL}"
            )
            slackSend(
                channel: '#jenkins-notifications',
                color: 'good',
                message: "SUCCESS: *${env.JOB_NAME}* Build #${env.BUILD_NUMBER}\n${env.BUILD_URL}"
            )
        }

        failure {
            echo "Deployment failed!"
            mail(
                to: "bhuvan.abc.b12.reports@gmail.com",
                subject: "FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Build FAILED.\nLog: ${env.BUILD_URL}"
            )
            slackSend(
                channel: '#jenkins-notifications',
                color: 'danger',
                message: "FAILED: *${env.JOB_NAME}* Build #${env.BUILD_NUMBER}\n${env.BUILD_URL}"
            )
        }
    }
}
